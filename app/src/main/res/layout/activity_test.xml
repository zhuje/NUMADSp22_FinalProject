<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical"
    tools:context=".TestActivity">


    <Button
        android:id="@+id/btn_test_profile"
        android:onClick="onClickGoToProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEMO PROFILE"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:id="@+id/btn_test_lesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:onClick="onClickGoToLesson"
        android:text="DEMO Lesson" />

    <Button
        android:id="@+id/btn_test_message"
        android:onClick="onClickGoToMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEMO MESSAGE"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>