<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@color/colorDark"
    tools:context=".SublessonQuiz">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:shadowColor="@color/colorDark"
            android:shadowRadius="5"
            android:shadowDy="6"
            android:shadowDx="7"
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:text="Quiz "
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold"
            />



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/character"
                    />
                <TextView
                    android:layout_marginLeft="20dp"
                    android:text="Question "
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>



        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="Select the correct answer:"/>

        <Button
            android:elevation="5dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:backgroundTint="@color/yellow3"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:text= "A. Answer"
            />
        <Button
            android:elevation="5dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:backgroundTint="@color/yellow3"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:text= "B. Answer"
            />
        <Button
            android:elevation="5dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:backgroundTint="@color/yellow3"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:text= "C. Answer"
            />





        <Button
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green3"

            android:text="Next Lesson"/>




    </LinearLayout>
</ScrollView>