                <TextView
                    android:id="@+id/textView106"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To swim"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textView105"
